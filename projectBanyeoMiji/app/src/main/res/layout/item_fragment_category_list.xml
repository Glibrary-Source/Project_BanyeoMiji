<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_item"
    android:orientation="vertical"
    android:background="@drawable/btn_category_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:padding="2dp"
    android:elevation="8dp"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/text_category_item_title"
        tools:text="카페"
        android:textSize="28dp"
        android:fontFamily="@font/bagelfat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/img_category_item"
        android:padding="4dp"
        tools:src="@drawable/img_category_item_korea_art_gallery"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:ignore="ContentDescription" />

</LinearLayout>