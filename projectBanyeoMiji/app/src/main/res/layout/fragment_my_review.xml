<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.FragmentMyReview">

    <FrameLayout
        android:id="@+id/framelayout_title_my_review"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/activity_main_title_background"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_my_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bagelfat"
            android:text="@string/my_review_kr"
            android:textSize="28dp"
            tools:ignore="SpUsage" />
    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_my_review"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/framelayout_title_my_review" />

    <TextView
        android:id="@+id/text_review_gone"
        android:text="@string/my_review_gone"
        android:fontFamily="@font/bagelfat"
        android:gravity="center"
        android:visibility="gone"
        android:animateLayoutChanges="false"
        android:textSize="36dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>