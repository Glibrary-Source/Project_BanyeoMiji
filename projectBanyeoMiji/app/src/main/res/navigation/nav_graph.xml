<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentCategory">

    <fragment
        android:id="@+id/fragmentCategory"
        android:name="com.twproject.banyeomiji.view.main.FragmentCategory"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_fragmentCategory_to_fragmentLocationList"
            app:destination="@id/fragmentLocationList"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@id/fragmentCategory"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_fragmentCategory_to_payTestFragment"
            app:destination="@id/payTestFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLocationList"
        android:name="com.twproject.banyeomiji.view.main.FragmentLocationList"
        android:label="fragment_location_list"
        tools:layout="@layout/fragment_location_list" >
        <argument
            android:name="CategoryName"
            app:argType="string" />
        <action
            android:id="@+id/action_fragmentLocationList_to_fragmentReview"
            app:destination="@id/fragmentReview" />
    </fragment>
    <fragment
        android:id="@+id/fragmentStoreMap"
        android:name="com.twproject.banyeomiji.view.main.FragmentStoreMap"
        android:label="fragment_store_map"
        tools:layout="@layout/fragment_store_map" >
        <action
            android:id="@+id/action_fragmentStoreMap_to_fragmentLocationList"
            app:destination="@id/fragmentLocationList"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpToInclusive="true"
            app:popUpTo="@id/fragmentLocationList"/>

    </fragment>
    <fragment
        android:id="@+id/fragmentReview"
        android:name="com.twproject.banyeomiji.view.main.FragmentReview"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" >
        <action
            android:id="@+id/action_fragmentReview_to_fragmentLocationList"
            app:destination="@id/fragmentLocationList"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpToInclusive="true"
            app:popUpTo="@id/fragmentLocationList"/>
        <argument
            android:name="TempCategoryName"
            app:argType="string" />
        <argument
            android:name="DocId"
            app:argType="string" />
        <argument
            android:name="StoreName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.twproject.banyeomiji.view.login.FragmentLogin"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentMyPage"
            app:destination="@id/fragmentMyPage"
            app:popUpToInclusive="true"
            app:popUpTo="@id/fragmentLogin" />
    </fragment>
    <fragment
        android:id="@+id/fragmentMyPage"
        android:name="com.twproject.banyeomiji.view.login.FragmentMyPage"
        android:label="fragment_my_page"
        tools:layout="@layout/fragment_my_page" >
        <action
            android:id="@+id/action_fragmentMyPage_to_fragmentMyReview"
            app:destination="@id/fragmentMyReview" />
        <action
            android:id="@+id/action_fragmentMyPage_to_fragmentLogin"
            app:destination="@id/fragmentLogin"
            app:popUpToInclusive="true"
            app:popUpTo="@id/fragmentMyPage" />
    </fragment>
    <fragment
        android:id="@+id/fragmentMyReview"
        android:name="com.twproject.banyeomiji.view.login.FragmentMyReview"
        android:label="fragment_my_review"
        tools:layout="@layout/fragment_my_review" >
        <argument
            android:name="currentUid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/payTestFragment"
        android:name="com.twproject.banyeomiji.PayTestFragment"
        android:label="fragment_pay_test"
        tools:layout="@layout/fragment_pay_test" />
</navigation>